@model FinalExamMVC.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">

    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Items on shop now</h4>
        </header>

        <div class="row row-sm">
            @foreach (var item in Model.ListProduct)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="#" class="card card-sm card-product-grid">
                        <a href="#" class="img-wrap"> <img src="~/Content/images/items/@item.Image"> </a>
                        <figcaption class="info-wrap">
                            <a href="#" class="title">@item.Name</a>
                            <div class="price mt-1">@item.Price đ</div>
                        </figcaption>
                    </div>
                </div>
            }

        </div>
    </section>



</div>
